{
  "title": "VibeVoice",
  "description": "Frontier open-source text-to-speech with expressive control, powered by microsoft/VibeVoice-1.5B. Supports English and Chinese with multi-speaker synthesis.",
  "type": "serverless",
  "category": "audio",
  "iconUrl": "https://raw.githubusercontent.com/jords1755/VibeVoice/main/assets/icon.png",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 20,
    "presets": [
      {
        "name": "English Default",
        "defaults": {
          "MODEL_NAME": "microsoft/VibeVoice-1.5B",
          "LANGUAGE": "en"
        }
      },
      {
        "name": "Chinese Default",
        "defaults": {
          "MODEL_NAME": "microsoft/VibeVoice-1.5B",
          "LANGUAGE": "zh"
        }
      }
    ],
    "env": [
      {
        "key": "MODEL_NAME",
        "value": "microsoft/VibeVoice-1.5B"
      },
      {
        "key": "LANGUAGE",
        "input": {
          "name": "Language Code",
          "type": "string",
          "description": "Language for synthesis (en or zh)",
          "default": "en"
        }
      },
      {
        "key": "HF_TOKEN",
        "input": {
          "name": "Hugging Face Token",
          "type": "string",
          "description": "Required if using gated model weights from Hugging Face",
          "default": ""
        }
      }
    ]
  }
}
